{% extends 'base.html.twig' %} {% block title %}Hello TweetController! {%
endblock %} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px / 1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

{% if app.user %}
<div class="mb-3">
  You are logged in as {{ app.user.userIdentifier }},
  <a href="{{ path('app_logout') }}">Logout</a>
</div>
{% endif %}

<div class="example-wrapper">
  <h1>Hello {{ controller_name }}! ✅</h1>

  <strong>Tweets de el usuario {{ username }}✅</strong>
  <ul>
    {% for tweet in tweets %}
    <li>
      {{ tweet.content }}
      -
      {{ tweet.publishDate|date('Y-m-d H:i:s') }}
    </li>
    {% endfor %}
  </ul>
</div>
{% endblock %}
