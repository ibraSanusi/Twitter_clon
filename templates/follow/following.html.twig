{% extends 'base.html.twig' %} {% block title %}Hello UserController! {%
endblock %} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px / 1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

{% if app.user %}
<div class="mb-3">
  You are logged in as {{ app.user.userIdentifier }},
  <a href="{{ path('app_logout') }}">Logout</a>
</div>
{% endif %}

<div class="example-wrapper">
  <h1>{{ controller_name }}! ✅</h1>

  <strong>
    {{ username }}
    sigue a...✅</strong
  >
  {% if followingUsers is not empty %}
  <ul>
    {% for user in followingUsers %} {# Solo se muestra si el seguidor es
    distinto del que esta en sesion #} {# {% if user.following.username !=
    username %} #}
    <li>
      {{ user.following.username }}
    </li>
    {# {% endif %} #} {% endfor %}
  </ul>
  {% else %} No sigue a nadie. {% endif %}
</div>
{% endblock %}
