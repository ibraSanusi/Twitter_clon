{% extends 'base.html.twig' %} {% block title %}Hello UserController! {%
endblock %} {% block body %}
<style>
  .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 95%;
    font: 18px / 1.5 sans-serif;
  }
  .example-wrapper code {
    background: #f5f5f5;
    padding: 2px 6px;
  }
</style>

{% if app.user %}
<div class="mb-3">
  You are logged in as {{ app.user.userIdentifier }},
  <a href="{{ path('app_logout') }}">Logout</a>
</div>
{% endif %}

<div class="example-wrapper">
  <h1>{{ controller_name }}! ✅</h1>

  <strong>
    A
    {{ username }}
    le siguen...✅</strong
  >
  <ul>
    {% if userFollowers is not empty %} {% for user in userFollowers %} {# Solo
    se muestra si el seguidor es distinto de el mismo #} {% if
    user.follower.username != username %}
    <li>
      {{ user.follower.username }}
    </li>
    {% endif %} {% endfor %} {% else %}
    <li>No hay seguidores.</li>
    {% endif %}
  </ul>
</div>
{% endblock %}
